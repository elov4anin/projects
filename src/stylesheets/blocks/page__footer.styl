.page__footer
  margin-top: 60px
  display: flex
  flex-direction row
  justify-content space-between

  padding-top: 25px
  padding-bottom: 0px

  border-top: 1px solid #C4C4C4

.copy
  margin-top: 5px

  line-height: normal;
  font-size: 20px;
  letter-spacing: -0.02em;

  color: #92A1B0;

.social
  &__list
    display: flex
    flex-direction row
    margin-top: 0
    margin-bottom: 0
    padding-left: 0

  &__item
    margin: 0 15px

    &:last-of-type
      margin-right: 0





