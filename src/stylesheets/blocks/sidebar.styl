.sidebar
  position: fixed
  right: 0
  top: 0
  bottom: 0
  z-index 4

  width: 473px
  height: 100%

  background-color #206FCD
  background-image: url("../img/bg_sidebar.png");
  background-position:-4px 0

  background-size: 475px auto
  background-repeat: no-repeat

  &__wrap
    margin: 0 60px


.login
  &__header
    margin-top: 167px/*207*/
    margin-bottom: 0

    line-height: normal;
    font-size: 36px;
    letter-spacing: -0.05em;
    color: #FFFFFF;

  &__text
    margin-top: 20px
    margin-bottom: 0

    line-height: 34px;
    font-size: 24px;
    letter-spacing: -0.02em;

    color: #E5EFF7;

  &__input-wrap
    position: relative

    &:before
      content ""
      position: absolute
      top: 62px
      left: 14px
      width: 20px
      height: 20px
      background-repeat:no-repeat
    //background-color: red

    &:nth-child(1)
      &:before
        background-image: url(../img/icons-svg/ic_account.svg)

    &:nth-child(2)
      &:before
        height: 22px
        width: 21px
        background-image: url(../img/icons-svg/ic_password.svg)

    &--active
      &:nth-child(1)
        &:before
          background-image: url(../img/icons-svg/ic_account_active.svg)

      &:nth-child(2)
        &:before
          height: 22px
          width: 21px
          background-image: url(../img/icons-svg/ic_password_active.svg)

    &--error
      &:nth-child(1)
        &:before
          background-image: url(../img/icons-svg/ic_account_error.svg)

        &:after
          content ""
          position: absolute
          top: 60px;
          right: 15px;
          width: 5px;
          height: 28px;
          background-image: url(../img/icons-svg/ic_attention.svg)
          background-repeat:no-repeat

      &:nth-child(2)
        &:before
          height: 22px
          width: 21px
          background-image: url(../img/icons-svg/ic_password_active.svg)

        &:after
          display: none

    &--success
      &:nth-child(1)
        &:before
          background-image: url(../img/icons-svg/ic_account_success.svg)

        &:after
          content ""
          position: absolute
          top: 55px;
          right: 10px;
          width: 28px;
          height: 28px;
          background-image: url(../img/icons-svg/ic_success.svg)
          background-repeat:no-repeat

      &:nth-child(2)
        &:before
          height: 22px
          width: 21px
          background-image: url(../img/icons-svg/ic_password_success.svg)

        &:after
          content ""
          position: absolute
          top: 55px;
          right: 10px;
          width: 28px;
          height: 28px;
          background-image: url(../img/icons-svg/ic_success.svg)
          background-repeat:no-repeat



    
  &__input
    width: 100%
    margin-top: 40px
    padding-left: 50px
    padding-top: 15px
    padding-right: 15px
    padding-bottom: 15px

    border-radius 4px
    border none
    background-color: #fff

    font-family: Roboto;
    line-height: 34px;
    font-size: 24px;
    letter-spacing: -0.02em;
    color: #5A6176;

    &::placehoder
      font-family: Roboto;
      line-height: 34px;
      font-size: 24px;
      letter-spacing: -0.02em;

      color: #92A1B0;

  &__submit
    display: block
    width: 100%
    margin-top: 35px
    padding-top: 22px
    padding-bottom: 22px

    font-weight: 500;
    line-height: normal;
    font-size: 30px;
    text-align: center;
    letter-spacing: -0.02em;
    color: #FFFFFF;

    background: #206FCD;
    box-sizing: border-box;
    border-radius: 40px;
    border: 2px solid #FFFFFF;
    box-shadow: 0px 10px 25px 0px rgba(38,79,128,1);
    cursor pointer

    &:disabled
      color: #99BDE8;
      border: 2px solid #99BDE8;


.remember
  &__input
    display: none

  &__label
    position: relative

    display: block
    margin-top: 35px
    padding-left: 40px

    line-height: normal;
    font-size: 18px;
    color: #99BDE8;

    cursor pointer

    &:before
      content "";
      position: absolute
      left: 0
      top: 2px

      width: 18px;
      height: 18px;

      border: 2px solid #99BDE8


.remember__input:checked + .remember__label:after
  content: ''
  position: absolute
  left: 0
  top: 2px

  display: block
  width: 22px
  height: 22px

  background-color: #348BED

.remember__input:checked + .remember__label:before
  content: ''
  position: absolute
  left: 7px
  top: 4px
  z-index: 2

  display: block
  width: 6px
  height: 12px

  background-color: transparent
  border none

  border-right 2px solid #206FCD
  border-bottom: 2px solid #206FCD

  transform rotate(45deg)

@media screen and (max-width: 1367px)
  .login
    &__header
      margin-top: 37px
      font-size: 30px;

    &__text
      font-size: 20px

    &__submit
      margin-top: 25px
      padding-top: 10px
      padding-bottom: 10px
      font-size: 24px;

    &__input
      margin-top: 25px

    &__input-wrap
      position: relative

      &:before

        top: 46px

      &--error
        &:nth-child(1)

          &:after
            top: 45px
            right: 25px

      &--success
        &:nth-child(1)
          &:after
            top: 40px;
            right: 10px;

        &:nth-child(2)
          &:after
            top: 40px;
            right: 10px;

.restore
  display: block
  margin-top: 15px
  font-family: Roboto;
  font-style: normal;
  font-weight: normal;
  line-height: normal;
  font-size: 18px;
  text-align: center;

  cursor pointer

  color: #99BDE8;

  &__link
    color: #fbb601
    text-decoration: underline
    