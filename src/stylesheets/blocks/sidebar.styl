.sidebar
  position: fixed
  right: 0
  top: 0
  bottom: 0

  width: 473px
  height: 100%

  background-color #206FCD
  background-image: url("../img/bg_sidebar.png");
  background-position:-4px 0

  background-size: 475px auto
  background-repeat: no-repeat

  &__wrap
    margin: 0 60px

.login
  &__header
    margin-top: 207px
    margin-bottom: 0

    line-height: normal;
    font-size: 36px;
    letter-spacing: -0.05em;
    color: #FFFFFF;

  &__text
    margin-top: 20px
    margin-bottom: 0

    line-height: 34px;
    font-size: 24px;
    letter-spacing: -0.02em;

    color: #E5EFF7;
    
  &__input
    width: 100%
    margin-top: 40px
    padding-left: 50px
    padding-top: 15px
    padding-right: 15px
    padding-bottom: 15px

    border-radius 4px
    border none
    background-color: #fff

    &::placehoder
      line-height: 34px;
      font-size: 24px;
      letter-spacing: -0.02em;

      color: #92A1B0;

  &__submit:disabled
    display: block
    width: 100%
    margin-top: 35px
    padding-top: 22px
    padding-bottom: 22px

    font-weight: 500;
    line-height: normal;
    font-size: 30px;
    text-align: center;
    letter-spacing: -0.02em;

    color: #99BDE8;

    background: #206FCD;
    border: 2px solid #99BDE8;
    box-sizing: border-box;
    border-radius: 40px;
    box-shadow: 0px 10px 25px 0px rgba(38,79,128,1);
    cursor pointer



.remember
  &__input
    display: none

  &__label
    position: relative

    display: block
    margin-top: 35px
    padding-left: 40px

    line-height: normal;
    font-size: 18px;
    color: #99BDE8;

    cursor pointer

    &:before
      content "";
      position: absolute
      left: 0
      top: 2px

      width: 18px;
      height: 18px;

      border: 2px solid #99BDE8


.remember__input:checked + .remember__label:after
  content: ''
  position: absolute
  left: 0
  top: 2px

  display: block
  width: 22px
  height: 22px

  background-color: #348BED

.remember__input:checked + .remember__label:before
  content: ''
  position: absolute
  left: 7px
  top: 4px
  z-index: 2

  display: block
  width: 6px
  height: 12px

  background-color: transparent
  border none

  border-right 2px solid #206FCD
  border-bottom: 2px solid #206FCD

  transform rotate(45deg)

