.page__footer
  position: fixed
  right: 0
  left: 0
  bottom: 0
  z-index 3

  margin-top: 60px
  padding-top: 35px
  padding-bottom: 25px
  border-top: 1px solid #C4C4C4

  &--slider

    z-index 5
    background: rgba(27,55,88, 0.2)

    border-top: none

.page__footer-wrapper
  display: flex
  flex-direction row
  justify-content space-between

  margin-left 125px
  width: 715px

.copy
  margin-top: 5px

  line-height: normal;
  font-size: 20px;
  letter-spacing: -0.02em;

  color: #92A1B0;

.social
  &__list
    display: flex
    flex-direction row
    margin-top: 0
    margin-bottom: 0
    padding-left: 0

  &__item
    margin: 0 15px

    &:last-of-type
      margin-right: 0





@media screen and (max-width: 1367px)
  .page__footer
    padding-top: 25px
    padding-bottom: 15px