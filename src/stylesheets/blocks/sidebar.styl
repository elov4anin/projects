.sidebar
  position: fixed
  right: 0
  top: 0
  bottom: 0

  width: 473px
  height: 100%

  background-color #206FCD
  background-image: url("../img/bg_sidebar.png");
  background-position:-4px 0

  background-size: 475px auto
  background-repeat: no-repeat

  &__wrap
    margin: 0 60px

.login
  &__header
    margin-top: 207px
    margin-bottom: 0

    line-height: normal;
    font-size: 36px;
    letter-spacing: -0.05em;
    color: #FFFFFF;

  &__text
    margin-top: 20px
    margin-bottom: 0

    line-height: 34px;
    font-size: 24px;
    letter-spacing: -0.02em;

    color: #E5EFF7;
    
  &__input
    width: 100%
    margin-top: 40px
    padding-left: 50px
    padding-top: 15px
    padding-right: 15px
    padding-bottom: 15px

    border-radius 4px
    background-color: #fff

    &::placehoder
      line-height: 34px;
      font-size: 24px;
      letter-spacing: -0.02em;

      color: #92A1B0;



